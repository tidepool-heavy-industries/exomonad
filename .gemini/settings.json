{
  "mcpServers": {
    "exomonad": {
      "url": "http://localhost:7432/tl/mcp",
      "type": "http"
    }
  },
  "hooks": {
    // Gemini CLI uses kebab-case for hook events (e.g. after-agent).
    // Lifecycle hooks like after-agent require a wildcard matcher "*".
    "after-agent": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "stop-check",
            "type": "command",
            "command": "exomonad hook after-agent --runtime gemini",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}