{
  "mcpServers": {
    "exomonad": {
      "url": "http://localhost:7432/tl/mcp",
      "type": "http"
    }
  },
  "hooks": {
    // Gemini CLI uses PascalCase for hook events (e.g. AfterAgent, BeforeTool).
    // Lifecycle hooks like AfterAgent require a wildcard matcher "*".
    "AfterAgent": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "stop-check",
            "type": "command",
            "command": "exomonad hook after-agent --runtime gemini",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}