# Copy this to .env and fill in your Anthropic API key
# .env is gitignored

# Required for teach-graph tool
ANTHROPIC_API_KEY=sk-ant-...

# Required: Path to the Hangar shared tooling directory (within tidepool-b0p)
# e.g. /path/to/tidepool-b0p/hangar
HANGAR_ROOT=

# Enable training data capture
TEACHING_ENABLED=true

# Where to write training JSONL (relative or absolute path)
TEACHING_OUTPUT_DIR=./training-data
