# Copy this to .env and fill in your keys
# .env is gitignored

# API key for control server LLM calls (MCP tools like teach-graph)
# This is a standard Anthropic API key (sk-ant-...)
ANTHROPIC_API_KEY=sk-ant-...

# OAuth token for Claude Code authentication ONLY
# WARNING: Do NOT use this for raw API calls (POST /v1/messages, SDK, etc.)
#          Using OAuth tokens for direct API access may result in account lockout.
#          This token is ONLY for Claude Code's internal authentication.
CLAUDE_CODE_OAUTH_KEY=<oauth-token-here>

# Required: Path to the Hangar shared tooling directory (within tidepool-b0p)
# e.g. /path/to/tidepool-b0p/hangar
HANGAR_ROOT=

# Enable training data capture
TEACHING_ENABLED=true

# Where to write training JSONL (relative or absolute path)
TEACHING_OUTPUT_DIR=./training-data

# Unix socket paths for IPC
TIDEPOOL_CONTROL_SOCKET=.tidepool/sockets/control.sock
TIDEPOOL_TUI_SOCKET=.tidepool/sockets/tui.sock
