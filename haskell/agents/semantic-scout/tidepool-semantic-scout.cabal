cabal-version: 3.0
name: tidepool-semantic-scout
version: 0.1.0.0
synopsis: Semantic code scout exposed as MCP tool
description: First working example of LLMNode as MCP tool - explores codebases using LSP
license: MIT
author: Tidepool
maintainer: noreply@tidepool.com
category: Development
build-type: Simple

executable semantic-scout
  main-is: Main.hs
  other-modules:
    Tidepool.Agents.Scout.Types
  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options: -Wall -Wno-orphans -threaded -rtsopts -with-rtsopts=-N

  build-depends:
      base >=4.14 && <5
    , aeson
    , text
    , tidepool-core
    , tidepool-mcp-server
