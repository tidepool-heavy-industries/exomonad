        ExoMonad.Control.Scout.Types
        ExoMonad.Control.Scout.EdgeTypes
        ExoMonad.Control.Scout.Heuristics
        ExoMonad.Control.Scout.LSP
        ExoMonad.Control.Scout.Templates
        -- DocGen (teaching document generation)
        ExoMonad.Control.Scout.DocGen
        ExoMonad.Control.Scout.DocGen.Types
        ExoMonad.Control.Scout.DocGen.Gemma
        ExoMonad.Control.Scout.DocGen.Teacher
        ExoMonad.Control.Scout.Tools
        -- Graph-based DocGen (exomonad DSL)
        ExoMonad.Control.Scout.Graph
        ExoMonad.Control.Scout.Graph.Types
        ExoMonad.Control.Scout.Graph.Templates
        ExoMonad.Control.Scout.Graph.Templates.Context
        ExoMonad.Control.Scout.Graph.Handlers
        ExoMonad.Control.Scout.Graph.Runner
    build-depends:
        base >= 4.17 && < 5,
        text >= 2.0 && < 3,
        aeson >= 2.1 && < 3,
        aeson-casing >= 0.2,
        bytestring >= 0.11 && < 1,
        base64-bytestring >= 1.2,
        async,
        directory,
        filepath,
        process,
        network >= 3.1 && < 4,
        stm >= 2.5 && < 3,
        fast-logger >= 3.0 && < 4,
        time >= 1.9 && < 2,
        -- Servant / HTTP
        servant,
        servant-server,
        warp,
        wai,
        wai-extra,
        uuid,
        -- Scout dependencies
        containers >= 0.6 && < 1,
        freer-simple,
        exomonad-core,
        exomonad-training-generator,
        exomonad-teaching,
        exomonad-cabal-interpreter,
        exomonad-github-interpreter,
        exomonad-git-interpreter,
        exomonad-env-interpreter,
        exomonad-justfile-interpreter,
        exomonad-worktree-interpreter,
        exomonad-filesystem-interpreter,
        exomonad-zellij-interpreter,
        exomonad-gemini-interpreter,
        exomonad-observability-interpreter,
        -- HTTP for FunctionGemma
        http-conduit,
        -- Logging for TUI interpreter
        monad-logger,
        http-client,
        regex-tdfa,
        vector,
        -- Code sampling
        random,
        -- OpenTelemetry
        hs-opentelemetry-api >= 0.1,
        hs-opentelemetry-sdk >= 0.1,
        hs-opentelemetry-exporter-otlp >= 0.1,
        -- Template rendering (for Graph/Templates.hs)
        mtl,
        ginger,
        parsec,
        yaml
    hs-source-dirs:   src
    default-language: GHC2024
    default-extensions:
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        LambdaCase
        OverloadedStrings
        OverloadedRecordDot
        DataKinds
        TypeFamilies
        TypeOperators

executable exomonad-control-server
    import:           warnings
    main-is:          Main.hs
    build-depends:
        base >= 4.17 && < 5,
        exomonad-control-server,
        directory,
        text >= 2.0 && < 3,
        exomonad-training-generator,
        aeson >= 2.1 && < 3,
        bytestring >= 0.11 && < 1
    hs-source-dirs:   app
    default-language: GHC2024
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N

