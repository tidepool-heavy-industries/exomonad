cabal-version:      3.0
name:               tidepool-control-server
version:            0.1.0.0
synopsis:           TCP control server for Claude Code++ hooks and MCP
description:        Receives hook events and MCP tool calls from mantle-agent
                    via NDJSON over TCP. Routes to effect handlers.
license:            MIT
author:             Inanna
build-type:         Simple

common warnings
    ghc-options: -Wall -Wincomplete-patterns -Wredundant-constraints -Wunused-packages

library
    import:           warnings
    exposed-modules:
        Tidepool.Control.Protocol
        Tidepool.Control.Server
        Tidepool.Control.Handler
        Tidepool.Control.Handler.Hook
        Tidepool.Control.Handler.MCP
    build-depends:
        base >= 4.17 && < 5,
        text >= 2.0 && < 3,
        aeson >= 2.1 && < 3,
        bytestring >= 0.11 && < 1,
        network >= 3.1 && < 4,
        stm >= 2.5 && < 3,
        time >= 1.12 && < 2
    hs-source-dirs:   src
    default-language: GHC2024
    default-extensions:
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        LambdaCase
        OverloadedStrings
        OverloadedRecordDot

executable tidepool-control-server
    import:           warnings
    main-is:          Main.hs
    build-depends:
        base >= 4.17 && < 5,
        tidepool-control-server,
        text >= 2.0 && < 3
    hs-source-dirs:   app
    default-language: GHC2024
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N
