cabal-version:      3.0
name:               tidepool-control-server
version:            0.1.0.0
synopsis:           TCP control server for Claude Code++ hooks and MCP
description:        Receives hook events and MCP tool calls from mantle-agent
                    via NDJSON over Unix socket. Routes to effect handlers.
                    Includes semantic-scout for code exploration via LSP.
license:            MIT
author:             Inanna
build-type:         Simple

data-files:
    templates/scout/*.jinja

common warnings
    ghc-options: -Wall -Wincomplete-patterns -Wredundant-constraints -Wunused-packages

library
    import:           warnings
    exposed-modules:
        -- Control server
        Tidepool.Control.Protocol
        Tidepool.Control.Server
        Tidepool.Control.Handler
        Tidepool.Control.Handler.Hook
        Tidepool.Control.Handler.MCP
        -- Scout (semantic code exploration)
        Tidepool.Control.Scout.Types
        Tidepool.Control.Scout.EdgeTypes
        Tidepool.Control.Scout.Scoring
        Tidepool.Control.Scout.Graph
        Tidepool.Control.Scout.Explore
        Tidepool.Control.Scout.Gemma
        Tidepool.Control.Scout.Heuristics
        Tidepool.Control.Scout.LSP
        Tidepool.Control.Scout.Templates
        -- Teach (teaching document generation)
        Tidepool.Control.Scout.Teach
        Tidepool.Control.Scout.Teach.Types
        Tidepool.Control.Scout.Teach.Gemma
    build-depends:
        base >= 4.17 && < 5,
        text >= 2.0 && < 3,
        aeson >= 2.1 && < 3,
        bytestring >= 0.11 && < 1,
        directory,
        filepath,
        network >= 3.1 && < 4,
        -- Scout dependencies
        containers >= 0.6 && < 1,
        freer-simple,
        pqueue >= 1.4 && < 2,
        tidepool-core,
        tidepool-lsp-interpreter,
        tidepool-training-generator,
        -- HTTP for FunctionGemma
        http-conduit,
        vector
    hs-source-dirs:   src
    default-language: GHC2024
    default-extensions:
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        LambdaCase
        OverloadedStrings
        OverloadedRecordDot
        DataKinds
        TypeFamilies
        TypeOperators

executable tidepool-control-server
    import:           warnings
    main-is:          Main.hs
    build-depends:
        base >= 4.17 && < 5,
        tidepool-control-server,
        directory
    hs-source-dirs:   app
    default-language: GHC2024
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N
