cabal-version:      3.0
name:               tidepool-session-executor
version:            0.1.0.0
synopsis:           Session effect executor - dockerized Claude Code orchestration
description:
    Implements Session effect by spawning mantle session processes.
    .
    Sessions are the persistent unit; containers are ephemeral. Each operation
    (start, continue, fork) spawns a mantle process that runs one turn and
    returns JSON to stdout.
    .
    Architecture:
    .
    * Haskell spawns @mantle session start/continue/fork@ processes
    * Mantle manages worktrees at @.mantle/worktrees/<branch>/@
    * Claude Code runs in containers with shared @~/.claude/@ volume
    * Sessions persist via @--resume <id>@ and @--fork-session@
license:            MIT
author:             Inanna
build-type:         Simple

common warnings
    ghc-options: -Wall -Wincomplete-patterns -Wredundant-constraints -Wunused-packages

library
    import:           warnings
    exposed-modules:
        Tidepool.Session.Executor
    build-depends:
        base >= 4.17 && < 5,
        freer-simple >= 1.2 && < 2,
        text >= 2.0 && < 3,
        process >= 1.6 && < 2,
        bytestring >= 0.11 && < 1,
        aeson >= 2.1 && < 3,
        time >= 1.12 && < 2,
        random >= 1.2 && < 2,
        tidepool-core
    hs-source-dirs:   src
    default-language: GHC2021
    default-extensions:
        DataKinds
        DeriveGeneric
        DerivingStrategies
        GADTs
        LambdaCase
        OverloadedStrings
        OverloadedRecordDot
        TypeFamilies
        TypeOperators

test-suite session-executor-test
    type:             exitcode-stdio-1.0
    main-is:          Main.hs
    other-modules:
        Tidepool.Session.JsonSpec
        Tidepool.Session.DecisionToolsIntegrationSpec
    hs-source-dirs:   test
    default-language: GHC2021
    default-extensions:
        DataKinds
        DeriveGeneric
        DerivingStrategies
        OverloadedStrings
        OverloadedRecordDot
        TypeApplications
    build-depends:
        base >= 4.17 && < 5,
        tidepool-core,
        tidepool-session-executor,
        freer-simple >= 1.2 && < 2,
        text >= 2.0 && < 3,
        aeson >= 2.1 && < 3,
        bytestring >= 0.11 && < 1,
        hspec >= 2.10 && < 3
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N
