cabal-version:      3.0
name:               exomonad-cabal-interpreter
version:            0.1.0.0
synopsis:           Cabal build/test effect interpreter with structured test failure parsing
license:            MIT
author:             Inanna
build-type:         Simple

common warnings
    ghc-options: -Wall -Wincomplete-patterns -Wredundant-constraints -Wunused-packages

library
    import:           warnings
    exposed-modules:
        ExoMonad.Cabal.Interpreter
    build-depends:
        base >= 4.17 && < 5,
        freer-simple >= 1.2 && < 2,
        text >= 2.0 && < 3,
        process >= 1.6 && < 2,
        directory >= 1.3 && < 2,
        regex-tdfa >= 1.3 && < 2,
        exomonad-core
    hs-source-dirs:   src
    default-language: GHC2024
    default-extensions:
        DataKinds
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        GADTs
        LambdaCase
        OverloadedRecordDot
        OverloadedStrings
        TypeFamilies
        TypeOperators
        ScopedTypeVariables
        TypeApplications

test-suite cabal-interpreter-test
    import:           warnings
    type:             exitcode-stdio-1.0
    main-is:          Spec.hs
    build-depends:
        base >= 4.17 && < 5,
        hspec >= 2.10 && < 3,
        text >= 2.0 && < 3,
        exomonad-cabal-interpreter,
        exomonad-core
    build-tool-depends:
        hspec-discover:hspec-discover >= 2.10 && < 3
    hs-source-dirs:   test
    default-language: GHC2024
    default-extensions:
        OverloadedRecordDot
        OverloadedStrings
        TypeApplications
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N
