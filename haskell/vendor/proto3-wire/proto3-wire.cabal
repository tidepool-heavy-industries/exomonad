cabal-version: 3.4
name: proto3-wire
version: 1.4.6
synopsis: Vendored proto3-wire with GHC 9.12 WASM fix
description:
  Vendored copy of proto3-wire 1.4.6 with one patch:
  GHC.IntWord64 -> GHC.Exts for Word64# on 32-bit targets (WASM).
  GHC.IntWord64 was removed in GHC 9.12.

author:             Inanna Malick
maintainer:         Inanna Malick
build-type: Simple
license:            BSD-3-Clause
license-file: proto3-wire-1.4.6/LICENSE

library
  default-language: Haskell2010
  hs-source-dirs: proto3-wire-1.4.6/src
  exposed-modules:
    Proto3.Wire
    Proto3.Wire.Builder
    Proto3.Wire.Class
    Proto3.Wire.Decode
    Proto3.Wire.Encode
    Proto3.Wire.Encode.Repeated
    Proto3.Wire.FoldR
    Proto3.Wire.Reverse
    Proto3.Wire.Reverse.Internal
    Proto3.Wire.Reverse.Prim
    Proto3.Wire.Reverse.Width
    Proto3.Wire.Tutorial
    Proto3.Wire.Types
  build-depends:
    base >= 4.12 && < 5.0,
    bytestring >= 0.10.6.0 && < 0.13,
    cereal >= 0.5.1 && < 0.6,
    containers >= 0.5 && < 0.8,
    deepseq >= 1.4 && < 1.6,
    ghc-prim,
    hashable >= 1.0.0 && < 1.6,
    template-haskell,
    parameterized >= 0.5.0.0 && < 1,
    primitive >= 0.6.4 && < 0.10,
    QuickCheck >= 2.8 && < 2.16,
    safe >= 0.3 && < 0.4,
    text >= 0.2 && < 2.2,
    text-short >= 0.1.2 && < 0.2,
    transformers >= 0.5.6.0 && < 0.7,
    unordered-containers >= 0.1.0.0 && < 0.3,
    vector >= 0.12.0.2 && < 0.14,
    word-compat >= 0.0.5 && < 0.1
  ghc-options: -O2 -Wall
