cabal-version: 3.0
name: mcp-server
version: 0.1.0.15
synopsis: Vendored MCP server library with Claude Code protocol support
description:
  Vendored copy of mcp-server from Hackage, patched to support
  MCP protocol version 2024-11-05 (used by Claude Code) in addition
  to the default 2025-06-18.
license: BSD-3-Clause
license-file: LICENSE
author: Tom Wells
maintainer: drshade@gmail.com
copyright: 2025 Tom Wells
build-type: Simple
extra-doc-files: CHANGELOG.md

library
  ghc-options: -Wall
  exposed-modules:
    MCP.Server
    MCP.Server.Derive
    MCP.Server.Handlers
    MCP.Server.JsonRpc
    MCP.Server.Protocol
    MCP.Server.Transport.Http
    MCP.Server.Transport.Stdio
    MCP.Server.Types
  build-depends:
    aeson >=2.0 && <3.0,
    base >=4.20.0 && <4.22,
    bytestring >=0.10 && <0.13,
    containers >=0.6 && <0.9,
    http-types >=0.12 && <1.0,
    network-uri >=2.6 && <2.8,
    template-haskell >=2.16 && <2.24,
    text >=1.2 && <3.0,
    vector >=0.12 && <1.0,
    wai >=3.2 && <4.0,
    warp >=3.3 && <4.0
  hs-source-dirs: .
  default-language: GHC2024
