cabal-version: 3.4
name: proto3-runtime
version: 0.9.4
synopsis: Minimal runtime for proto3-suite generated code
description:
  This is a minimal subset of proto3-suite that provides only the
  runtime modules needed by generated code. It excludes code generation
  modules (ghc-lib-parser), DotProto parsing/rendering (turtle, lens,
  parsers, megaparsec), and all test infrastructure (QuickCheck Arbitrary
  instances). The DotProto AST types are stub definitions that satisfy
  the Message typeclass without pulling in heavy dependencies.

build-type: Simple
license: Apache-2.0
license-file: proto3-suite-0.9.4/LICENSE

library
  default-language: GHC2021
  default-extensions:
    AllowAmbiguousTypes
    BangPatterns
    BlockArguments
    DataKinds
    DefaultSignatures
    DerivingVia
    FlexibleContexts
    FlexibleInstances
    GADTs
    MagicHash
    OverloadedStrings
    PolyKinds
    ScopedTypeVariables
    StandaloneDeriving
    TypeApplications
    TypeFamilies
    TypeOperators
    UndecidableInstances

  hs-source-dirs: proto3-suite-0.9.4/src

  exposed-modules:
    Proto3.Suite.Class
    Proto3.Suite.Types
    Proto3.Suite.JSONPB
    Proto3.Suite.JSONPB.Class
    Proto3.Suite.Form
    Proto3.Suite.Form.Encode
    Proto3.Suite.Form.Encode.Core
    Google.Protobuf.Wrappers.Polymorphic
    Google.Protobuf.Timestamp
    -- Minimal DotProto AST (stub types for Message typeclass, never evaluated)
    Proto3.Suite.DotProto
    Proto3.Suite.DotProto.AST

  build-depends:
    base >= 4.15 && < 5.0,
    proto3-wire >= 1.4.5 && < 1.5,
    aeson >= 2.0 && < 2.3,
    attoparsec >= 0.14 && < 0.15,
    attoparsec-aeson >= 2.2 && < 2.3,
    base64-bytestring >= 1.1 && < 1.3,
    binary,
    bytestring >= 0.10 && < 0.13,
    cereal >= 0.5 && < 0.6,
    containers >= 0.6 && < 0.8,
    deepseq >= 1.4 && < 1.6,
    filepath,
    hashable >= 1.3 && < 1.6,
    mtl >= 2.2 && < 2.4,
    QuickCheck,
    template-haskell,
    text >= 1.2 && < 2.2,
    text-short >= 0.1 && < 0.2,
    time >= 1.11 && < 1.15,
    transformers >= 0.5 && < 0.7,
    unordered-containers >= 0.2 && < 0.3,
    vector >= 0.12 && < 0.14,
    word-compat >= 0.0.5 && < 0.1
