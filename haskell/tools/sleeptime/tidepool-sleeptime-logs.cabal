cabal-version:      3.0
name:               tidepool-sleeptime-logs
version:            0.1.0.0
synopsis:           CLI for querying Grafana/Loki logs during sleeptime evolution
description:        Query structured logs from Grafana Cloud Loki to analyze
                    graph transitions, LLM calls, and errors during sleeptime
                    evolution workflows.
license:            MIT
author:             Inanna
build-type:         Simple

common warnings
    ghc-options: -Wall -Wno-missing-export-lists

library
    import:           warnings
    exposed-modules:
        SleeptimeLogs.CLI
        SleeptimeLogs.Loki
        SleeptimeLogs.Config
        SleeptimeLogs.Output
    build-depends:
        base >= 4.17 && < 5,
        optparse-applicative >= 0.17 && < 1,
        http-client >= 0.7 && < 1,
        http-client-tls >= 0.3 && < 1,
        aeson >= 2.1 && < 3,
        text >= 2.0 && < 3,
        bytestring >= 0.11 && < 1,
        time >= 1.12 && < 2,
        vector >= 0.13 && < 1,
        tidepool-core
    hs-source-dirs:   src
    default-language: GHC2024
    default-extensions:
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        LambdaCase
        OverloadedRecordDot
        OverloadedStrings
        RecordWildCards

executable sleeptime-logs
    import:           warnings
    main-is:          Main.hs
    build-depends:
        base >= 4.17 && < 5,
        tidepool-sleeptime-logs
    hs-source-dirs:   app
    default-language: GHC2024
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N
