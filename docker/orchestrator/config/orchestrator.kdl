layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="Orchestrator" focus=true {
        pane split_direction="vertical" {
            // Pane 1: Claude Code (running as non-root user)
            // Force TERM=xterm-256color for proper TUI input handling
            pane name="Claude Code" focus=true size="70%" {
                command "bash"
                args "-c" "export TERM=xterm-256color SHELL=/bin/bash; cd /worktrees && exec claude --dangerously-skip-permissions"
            }

            pane split_direction="horizontal" {
                // Pane 2: control-server status (runs in separate container)
                pane name="Backend Status" {
                    command "bash"
                    args "-c" "echo 'ðŸ”§ control-server running in separate container' && echo 'ðŸ“¡ Socket: /sockets/control.sock' && echo '' && echo 'Check logs with: docker logs tidepool-control-server' && tail -f /dev/null"
                }

                // Pane 3: Orchestrator info
                pane name="Info" {
                    command "bash"
                    args "-c" "echo 'ðŸ“‹ Tidepool Orchestrator (Sidecar Architecture)' && echo '' && echo 'MCP Tools: 7 available via control-server' && echo 'Layout: 2-pane (Claude Code | Status)' && echo '' && tail -f /dev/null"
                }
            }
        }
    }
}
