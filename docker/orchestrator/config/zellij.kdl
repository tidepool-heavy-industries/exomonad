// Zellij configuration for Tidepool Orchestrator

// Default layout for new sessions (used by web interface)
default_layout "default"

// Web server config passed via CLI args to avoid duplication

// Enable session serialization so the session can be resumed if the container restarts
session_serialization true
serialization_interval 60

// Serialize pane viewport to preserve scrollback
pane_viewport_serialization true

// When the Zellij window is closed forcefully, detach (don't kill session)
on_force_close "detach"

// Keybindings
keybinds {
    shared_except "locked" {
        unbind "Ctrl q"
        bind "Ctrl q" { Quit; }
    }
}

// Theme
theme "default"
mouse_mode true
copy_on_select true
