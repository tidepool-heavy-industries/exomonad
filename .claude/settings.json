{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook pre-tool-use",
            "timeout": 300
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook session-start"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook session-start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "always",
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook session-end"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook subagent-start"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "always",
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook subagent-stop"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$EXOMONAD_BIN_DIR/exomonad hook stop"
          }
        ]
      }
    ]
  }
}
