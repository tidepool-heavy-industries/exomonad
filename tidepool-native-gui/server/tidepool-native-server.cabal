cabal-version:      3.0
name:               tidepool-native-server
version:            0.1.0.0
synopsis:           Native tidepool server - Servant + WebSocket + all executors
license:            MIT
author:             Inanna
build-type:         Simple

common warnings
    ghc-options: -Wall -Wno-missing-export-lists

library
    import:           warnings
    exposed-modules:
        Tidepool.Server
        Tidepool.Server.API
        Tidepool.Server.WebSocket
        Tidepool.Server.EffectRunner
    build-depends:
        base >= 4.17 && < 5,
        freer-simple >= 1.2 && < 2,
        text >= 2.0 && < 3,
        aeson >= 2.1 && < 3,
        bytestring >= 0.11 && < 1,
        servant >= 0.20 && < 1,
        servant-server >= 0.20 && < 1,
        warp >= 3.3 && < 4,
        wai >= 3.2 && < 4,
        wai-websockets >= 3.0 && < 4,
        websockets >= 0.12 && < 1,
        http-types >= 0.12 && < 1,
        filepath >= 1.4 && < 2,
        directory >= 1.3 && < 2,
        stm >= 2.5 && < 3,
        async >= 2.2 && < 3,
        tidepool-core,
        tidepool-wire-types,
        tidepool-ui-executor,
        tidepool-habitica-executor,
        tidepool-observability-executor,
        tidepool-llm-executor
    hs-source-dirs:   src
    default-language: GHC2021
    default-extensions:
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        GADTs
        LambdaCase
        OverloadedStrings
        TypeOperators

executable tidepool-native
    import:           warnings
    main-is:          Main.hs
    build-depends:
        base >= 4.17 && < 5,
        tidepool-native-server
    hs-source-dirs:   app
    default-language: GHC2021

test-suite server-tests
    import:           warnings
    type:             exitcode-stdio-1.0
    main-is:          Spec.hs
    ghc-options:      -threaded -rtsopts -with-rtsopts=-N
    other-modules:
        WebSocketSpec
        StaticFileSpec
    build-depends:
        base >= 4.17 && < 5,
        hspec >= 2.10 && < 3,
        text >= 2.0 && < 3,
        aeson >= 2.1 && < 3,
        bytestring >= 0.11 && < 1,
        websockets >= 0.12 && < 1,
        network >= 3.1 && < 4,
        http-client >= 0.7 && < 1,
        http-types >= 0.12 && < 1,
        async >= 2.2 && < 3,
        warp >= 3.3 && < 4,
        wai >= 3.2 && < 4,
        wai-websockets >= 3.0 && < 4,
        stm >= 2.5 && < 3,
        directory >= 1.3 && < 2,
        filepath >= 1.4 && < 2,
        tidepool-native-server,
        tidepool-wire-types
    hs-source-dirs:   test
    default-language: GHC2021
    default-extensions:
        OverloadedStrings
        TypeApplications
