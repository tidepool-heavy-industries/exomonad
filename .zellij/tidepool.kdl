layout {
    // Status bar template
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // Main tab
    tab name="Tidepool" focus=true {
        pane split_direction="vertical" {

            // LEFT: Claude Code (auto-launch with debug mode)
            pane name="Claude Code" size="50%" focus=true {
                command "claude"
                args "-d" "--continue" "--dangerously-skip-permissions"
            }

            pane split_direction="horizontal" {

                // TOP-RIGHT: Process Dashboard
                pane name="Orchestrator" size="33%" {
                    command "bash"
                    args "-c" "./scripts/tidepool-runner.sh up --tui"
                }

                // MIDDLE-RIGHT: TUI Sidebar (waits for control-server)
                pane name="TUI" size="33%" {
                    command "bash"
                    args "-c" "echo 'Waiting for control-server...'; until nc -zU .tidepool/sockets/tui.sock 2>/dev/null; do sleep 0.5; done; echo 'Control server ready!'; RUST_LOG=info rust/target/debug/tui-sidebar --socket .tidepool/sockets/tui.sock --health-socket .tidepool/sockets/tui-sidebar.sock"
                }

                // BOTTOM-RIGHT: Dedicated Logs
                pane name="Logs" {
                    command "bash"
                    args "-c" "sleep 2 && process-compose process logs control-server --follow"
                }
            }
        }
    }
}
