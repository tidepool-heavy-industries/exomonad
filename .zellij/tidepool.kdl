layout {
    // Status bar template
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // Main tab
    tab name="Tidepool" focus=true {
        pane split_direction="vertical" {

            // LEFT: Claude Code (auto-launch with debug mode)
            pane name="Claude Code" size="50%" focus=true {
                command "claude"
                args "-d" "--continue"
            }

            pane split_direction="horizontal" {

                // TOP-RIGHT: Process Dashboard
                pane name="Orchestrator" size="33%" {
                    command "bash"
                    args "-c" "./scripts/tidepool-runner.sh up --tui"
                }

                // MIDDLE-RIGHT: TUI Sidebar
                pane name="TUI" size="33%" {
                    command "bash"
                    args "-c" "cd rust && RUST_LOG=info cargo run -p tui-sidebar"
                }

                // BOTTOM-RIGHT: Dedicated Logs
                pane name="Logs" {
                    command "bash"
                    args "-c" "sleep 2 && ~/.local/bin/process-compose process logs control-server --follow"
                }
            }
        }
    }
}
