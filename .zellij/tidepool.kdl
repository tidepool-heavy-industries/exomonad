// Tidepool Frontend Layout
//
// TTY-dependent panes that wait for backend (process-compose) to be ready.
// Each pane spins on socket availability before launching its process.
//
// See process-compose.yaml for backend orchestration.

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="Tidepool" focus=true {
        pane split_direction="vertical" {

            // LEFT: Claude Code with supervisor loop (auto-restarts on crash)
            pane name="Claude Code" size="50%" focus=true {
                command "bash"
                args "-c" "cd \"$(git rev-parse --show-toplevel)\" && while true; do echo '⏳ Waiting for MCP...'; until test -S .tidepool/sockets/control.sock; do sleep 0.5; done; echo '✓ MCP ready!'; claude -d --continue --dangerously-skip-permissions; echo '⚠️ Claude exited. Restarting in 2s...'; sleep 2; done"
            }

            pane split_direction="horizontal" {

                // TOP-RIGHT: TUI Sidebar with supervisor loop (auto-restarts on crash)
                pane name="TUI Sidebar" size="50%" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && while true; do echo '⏳ Waiting for server...'; until test -S .tidepool/sockets/control.sock; do sleep 0.5; done; echo '✓ Ready!'; rust/target/debug/tui-sidebar --socket .tidepool/sockets/tui.sock --health-socket .tidepool/sockets/tui-sidebar.sock; echo '⚠️ TUI exited. Restarting in 2s...'; sleep 2; done"
                }

                // BOTTOM-RIGHT: Backend Status (process-compose dashboard)
                pane name="Backend" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && mkdir -p .tidepool/sockets .tidepool/logs && exec process-compose up --no-server"
                }
            }
        }
    }
}
