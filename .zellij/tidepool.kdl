// Tidepool Frontend Layout
//
// TTY-dependent panes that wait for backend (process-compose) to be ready.
// Each pane spins on socket availability before launching its process.
//
// See process-compose.yaml for backend orchestration.

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="Tidepool" focus=true {
        pane split_direction="vertical" {

            // LEFT: Claude Code (waits for MCP backend)
            pane name="Claude Code" size="50%" focus=true {
                command "bash"
                args "-c" "cd \"$(git rev-parse --show-toplevel)\" && echo '⏳ Waiting for MCP backend...'; until nc -zU .tidepool/sockets/control.sock 2>/dev/null; do sleep 0.5; done; echo '✓ MCP ready!'; exec claude -d --continue --dangerously-skip-permissions"
            }

            pane split_direction="horizontal" {

                // TOP-RIGHT: TUI Sidebar (waits for tui.sock)
                pane name="TUI Sidebar" size="50%" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && echo '⏳ Waiting for TUI socket...'; until nc -zU .tidepool/sockets/tui.sock 2>/dev/null; do sleep 0.5; done; echo '✓ TUI socket ready!'; exec rust/target/debug/tui-sidebar --socket .tidepool/sockets/tui.sock --health-socket .tidepool/sockets/tui-sidebar.sock"
                }

                // BOTTOM-RIGHT: Backend Status (process-compose dashboard)
                pane name="Backend" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && mkdir -p .tidepool/sockets .tidepool/logs && exec process-compose up --no-server"
                }
            }
        }
    }
}
