// Tidepool Frontend Layout
//
// TTY-dependent panes that wait for backend (process-compose) to be ready.
// Each pane spins on socket availability before launching its process.
//
// See process-compose.yaml for backend orchestration.

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="Tidepool" focus=true {
        pane split_direction="vertical" {

            // LEFT: Claude Code with supervisor loop (auto-restarts on crash)
            pane name="Claude Code" size="50%" focus=true {
                command "bash"
                args "-c" "cd \"$(git rev-parse --show-toplevel)\" && if [ -z \"${TIDEPOOL_CONTROL_SOCKET:-}\" ]; then echo 'ERROR: TIDEPOOL_CONTROL_SOCKET must be exported before starting Zellij' >&2; sleep 5; exit 1; fi; while true; do ./scripts/wait-for-socket.sh \"$TIDEPOOL_CONTROL_SOCKET\" 60 ControlServer || exit 1; claude -d --continue --dangerously-skip-permissions; echo '⚠️ Claude exited. Restarting in 2s...'; sleep 2; done"
            }

            pane split_direction="horizontal" {

                // TOP-RIGHT: TUI Sidebar with supervisor loop (auto-restarts on crash)
                pane name="TUI Sidebar" size="50%" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && HANGAR_ROOT=$(pwd); while [ ! -f \"$HANGAR_ROOT/Hangar.toml\" ] && [ \"$HANGAR_ROOT\" != \"/\" ] && [ \"$HANGAR_ROOT\" != \"$HOME\" ]; do HANGAR_ROOT=$(dirname \"$HANGAR_ROOT\"); done; if [ ! -f \"$HANGAR_ROOT/Hangar.toml\" ]; then echo 'ERROR: Hangar.toml not found' >&2; exit 1; fi; BIN_DIR=\"$HANGAR_ROOT/runtime/bin\"; if [ -z \"${TIDEPOOL_CONTROL_SOCKET:-}\" ] || [ -z \"${TIDEPOOL_TUI_SOCKET:-}\" ]; then echo 'ERROR: TIDEPOOL_CONTROL_SOCKET and TIDEPOOL_TUI_SOCKET must be exported before starting Zellij' >&2; sleep 5; exit 1; fi; while true; do ./scripts/wait-for-socket.sh \"$TIDEPOOL_CONTROL_SOCKET\" 60 ControlServer || exit 1; \"$BIN_DIR/tui-sidebar\" --socket \"$TIDEPOOL_TUI_SOCKET\" --health-socket .tidepool/sockets/tui-sidebar.sock; echo '⚠️ TUI exited. Restarting in 2s...'; sleep 2; done"
                }

                // BOTTOM-RIGHT: Backend Status (process-compose dashboard)
                // Uses tidepool-runner.sh wrapper to ensure trap handlers fire on Zellij exit,
                // triggering 'process-compose down' for graceful service termination.
                pane name="Backend" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && mkdir -p .tidepool/sockets .tidepool/logs && exec ./scripts/tidepool-runner.sh up"
                }
            }
        }
    }
}
