// Zellij layout for Claude Code++ development
//
// Two vertical panes:
// - Left: Haskell control server (tidepool-control-server)
// - Right: Claude Code session (manual start by user)

layout {
    pane split_direction="vertical" {
        // Left pane: control server
        pane size="40%" {
            name "control-server"
            command "cabal"
            args "run" "tidepool-control-server"
            focus true
        }

        // Right pane: user shell for Claude Code
        pane size="60%" {
            name "claude"
        }
    }
}
