layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="subagent" {
        pane split_direction="vertical" {
            // LEFT: Main interaction pane (CLI)
            pane size="60%" focus=true {
                command "bash"
                args "-c" "if [ -z \"${TIDEPOOL_CONTROL_SOCKET:-}\" ]; then echo 'ERROR: TIDEPOOL_CONTROL_SOCKET not set' >&2; exit 1; fi; if [ -f .env.subagent ]; then source .env.subagent; fi; ./scripts/wait-for-socket.sh .tidepool/sockets/control.sock 60 ControlServer || exit 1; exec ${SUBAGENT_CMD:-claude}"
            }
            
            // RIGHT: Stacked infrastructure panes (collapsible)
            pane split_direction="horizontal" stacked=true {
                pane name="process-compose" {
                    command "bash"
                    args "-c" "mkdir -p .tidepool/logs .tidepool/sockets && export PC_NO_SERVER=true PC_USE_UDS=true PC_SOCKET_PATH=.tidepool/sockets/process-compose.sock && exec process-compose up -L .tidepool/logs/process-compose.log"
                }
                pane name="logs" {
                    command "tail"
                    args "-F" ".tidepool/logs/process-compose.log"
                }
            }
        }
    }
}
