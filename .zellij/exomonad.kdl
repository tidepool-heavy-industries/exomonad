// ExoMonad Frontend Layout
//
// TTY-dependent panes that wait for backend (process-compose) to be ready.
// Each pane spins on socket availability before launching its process.
//
// See process-compose.yaml for backend orchestration.

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="ExoMonad" focus=true {
        pane split_direction="vertical" {

            // LEFT: Claude Code + Agent Status Dashboard
            pane split_direction="horizontal" size="50%" {
                // Top: Main Agent Interaction (80%)
                pane name="Claude Code" size="80%" focus=true {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && if [ -z \"${EXOMONAD_CONTROL_SOCKET:-}\" ]; then echo 'ERROR: EXOMONAD_CONTROL_SOCKET must be exported before starting Zellij' >&2; sleep 5; exit 1; fi; while true; do ./scripts/wait-for-socket.sh \"$EXOMONAD_CONTROL_SOCKET\" 60 ControlServer || exit 1; claude -d --continue --dangerously-skip-permissions; echo '⚠️ Claude exited. Restarting in 2s...'; sleep 2; done"
                }

                // Bottom: Agent Status Dashboard (20%)
                pane name="Agent Status" size="20%" {
                    command "bash"
                    args "-c" "cd \"$(git rev-parse --show-toplevel)\" && while true; do agent-status; echo '⚠️ Agent Status exited. Restarting in 2s...'; sleep 2; done"
                }
            }

            // RIGHT: Backend Status (process-compose dashboard)
            pane name="Backend" {
                command "bash"
                args "-c" "cd \"$(git rev-parse --show-toplevel)\" && mkdir -p .exomonad/sockets .exomonad/logs && exec ./scripts/exomonad-runner.sh up"
            }
        }
    }
}