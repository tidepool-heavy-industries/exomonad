// Augmented Claude Code session layout
// Left pane: control-server (Haskell) on TCP port 7432
// Right pane: Claude Code

layout {
    pane split_direction="vertical" {
        pane {
            name "control-server"
            command "bash"
            args "-c" "cd /home/inanna/tidepool-heavy-industries/haiku-training-data-synthesis-woktree && set -a && source .env 2>/dev/null && set +a; echo '=== Starting control-server on TCP port 7432 ==='; cabal run tidepool-control-server; read -p 'Press enter to close...'"
            focus false
        }
        pane {
            name "claude-code"
            command "bash"
            args "-c" "cd /home/inanna/tidepool-heavy-industries/haiku-training-data-synthesis-woktree && set -a && source .env 2>/dev/null && set +a; sleep 3; echo '=== Starting Claude Code ==='; claude --model sonnet"
            focus true
        }
    }
}
